{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "moduleResolution": "node",
        "rootDir": "src",
        "outDir": "dist",
        "declaration": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "paths": {
        "@": [
            "src"
        ],
        "@/*": [
            "src/*"
        ],
        "@/types": [
            "src/types"
        ],
        "@/types/*": [
            "src/types/*"
        ]
    }
}