{
  "name": "student_life",
  "version": "1.0.0",
  "description": "project to help foreign students to find a temporal home meanwhile study",
  "main": "index.js",
  "author": "erickmx <erickblanc96@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/student-life-project/monorepo.git"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "postinstall": "husky install",
    "lint": "lerna run lint --stream",
    "lint:fix": "lerna run lint:fix --stream",
    "build": "lerna run build --stream",
    "build:front": "lerna run build --scope=\"@student_life/frontend\" --stream",
    "build:back": "lerna run build --scope=\"@student_life/backend\" --stream",
    "build:ui": "lerna run build --scope=\"@student_life/ui\" --stream",
    "build:common": "lerna run build --scope=\"@student_life/common\" --stream",
    "changelog": "lerna-changelog",
    "dev": "lerna run dev --stream --parallel",
    "dev:front": "lerna run dev --scope=\"@student_life/frontend\" --stream",
    "dev:back": "lerna run dev --scope=\"@student_life/backend\" --stream",
    "dev:common": "lerna run dev --scope=\"@student_life/common\" --stream",
    "dev:ui": "lerna run dev --scope=\"@student_life/ui\" --stream",
    "test": "lerna run --stream --parallel test -- --watchAll=false",
    "test:ci": "lerna run test:ci --stream",
    "start:front": "lerna run start --scope=\"@student_life/frontend\" --stream",
    "start:back": "lerna run start --scope=\"@student_life/backend\" --stream",
    "start:ui": "lerna run start --scope=\"@student_life/ui\" --stream"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@commitlint/config-lerna-scopes": "^11.0.0",
    "@emotion/eslint-plugin": "^11.2.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.27",
    "@types/source-map-support": "^0.5.3",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^5.0.9",
    "jest": "26.6.0",
    "lerna": "^3.22.1",
    "lerna-changelog": "^1.0.1",
    "lint-staged": "^10.5.4",
    "onchange": "^7.1.0",
    "prettier": "^2.2.1",
    "serve": "^11.3.2",
    "source-map-support": "^0.5.19",
    "ts-jest": "^26.5.1",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.5"
  },
  "workspaces": [
    "packages/*"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ]
  }
}
